# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Azure SQL Server)
DB_SERVER=Verein08112025.database.windows.net
DB_NAME=Verein
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_PORT=1433
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=false

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://verein.qubbe.ba

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

